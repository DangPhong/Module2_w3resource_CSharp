@model QLNV_Web.Models.PhongBan.TaoPhongBan

@{
    ViewData["Title"] = "TaoPhongBan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Tạo phòng ban</h1>
<div>
    <a class="btn btn-primary" asp-controller="PhongBan" asp-action="Index">Danh sách phòng ban</a>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="PhongBan" method="post" asp-action="TaoPhongBan">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if(TempData["ThanhCong"] != null){
            <p class="btn btn-success">@TempData["ThanhCong"]</p>
            }
            <div class="form-group">
                <label asp-for="MaPhongBan" class="control-label"></label>
                <input asp-for="MaPhongBan" class="form-control" />
                <span asp-validation-for="MaPhongBan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenPhongBan" class="control-label"></label>
                <input asp-for="TenPhongBan" class="form-control" />
                <span asp-validation-for="TenPhongBan" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
