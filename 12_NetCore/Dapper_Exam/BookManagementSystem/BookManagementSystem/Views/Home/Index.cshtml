@model IEnumerable<BookManagementSystem.Models.Domain.Response.BookGetAll>
@{
    ViewData["Title"] = "Index";
}
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/img/bookshelf349946_1280.jpg" alt="First slide" width="400px" height="auto">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/img/camera349948_1280.jpg" alt="Second slide" width="400px" height="auto">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/img/purse407176_1280.jpg" alt="Third slide" width="400px" height="auto">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<h1>Book list</h1>

<p>
    <a asp-action="Create"><i class="fas fa-book-medical"></i> Create a new book</a>
</p>
<form action="/" method="post">
    <div class="row input-group">
        <input type="text" name="stringSearch" class="form-control" placeholder="Search book name..." />
        <div class="input-group-btn">
            <input class="btn btn-primary" type="submit" value="Search" asp-controller="Home" asp-action="Search" />
        </div>
    </div>
</form>
<br />
<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th hidden>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Avatar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CateloryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td hidden>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Avatar)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Year)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CateloryName)
                </td>
                <td>
                    <a asp-controller="Home" asp-action="Update" asp-route-id="@item.ID"><i class="fas fa-edit"></i></a>
                    <a asp-controller="Home" asp-action="Detail" asp-route-id="@item.ID"><i class="fa fa-info-circle" aria-hidden="true"></i></a>
                    <a asp-controller="Home" asp-action="Delete" asp-route-id="@item.ID" onclick="return confirm('Do you want delete this book??')"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
